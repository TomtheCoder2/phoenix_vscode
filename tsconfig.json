{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./out",
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,         // Allow JavaScript files
    "checkJs": false         // Disable type checking for JavaScript files
  },
  "include": [
    "client/*",
    "server/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
